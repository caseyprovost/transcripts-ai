<%= form_with model: transcript, class: "h-full flex flex-col", data: { controller: "form" }, id: "transcript_form" do |f| %>
  <div class="p-4 border-b border-gray-700">
    <h2 class="text-sm font-medium mb-2">Transcript Input</h2>
    <div class="flex gap-2">
      <button class="bg-purple-600 hover:bg-purple-700 text-white text-sm px-3 py-1 rounded">
        Paste from Clipboard
      </button>
      <button class="bg-gray-700 hover:bg-gray-600 text-sm px-3 py-1 rounded">
        Upload File
      </button>
    </div>
  </div>
  <div class="flex-1 bg-gray-900 p-6">
    <%= f.text_area :body,
      class: "w-full h-full bg-gray-800 p-4 border border-gray-700 rounded-xl focus:ring-0 text-white placeholder-gray-400 resize-none",
      placeholder: "Paste your transcript here or drag and drop a text file...",
      data: { action: "input->form#save" } %>
  </div>
<% end %>